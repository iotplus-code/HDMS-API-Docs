{
  "openapi": "3.0.1",
  "info": {
    "title": "HDMS 하베스팅 데이터 모니터링 시스템 API",
    "description": "하베스팅 센서 데이터 모니터링 시스템의 REST API 문서입니다.",
    "contact": {
      "name": "HDMS Team",
      "email": "admin@hdms.com"
    },
    "license": {
      "name": "MIT License",
      "url": "https://opensource.org/licenses/MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/api",
      "description": "개발 서버"
    },
    {
      "url": "https://api.hdms.com/api",
      "description": "운영 서버"
    }
  ],
  "security": [
    {
      "Bearer Authentication": []
    }
  ],
  "tags": [
    {
      "name": "인증 관리",
      "description": "사용자 로그인, 로그아웃 및 인증 관련 API"
    },
    {
      "name": "사용자 관리",
      "description": "관리자 전용 사용자 관리 API (CRUD 및 권한 관리)"
    }
  ],
  "paths": {
    "/admin/users/{userId}/toggle-status": {
      "put": {
        "tags": [
          "사용자 관리"
        ],
        "operationId": "toggleUserStatus",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer Authentication": []
          }
        ]
      }
    },
    "/admin/users/{userId}/menu-permissions": {
      "put": {
        "tags": [
          "사용자 관리"
        ],
        "summary": "사용자 메뉴 권한 업데이트",
        "description": "특정 사용자의 메뉴 접근 권한을 업데이트합니다. (관리자 권한 필요)",
        "operationId": "updateMenuPermissions",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "권한을 업데이트할 사용자의 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            },
            "example": 1
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MenuPermissionsDto"
              }
            }
          },
          "required": true
        },
        "responses": {
          "404": {
            "description": "사용자를 찾을 수 없음",
            "content": {
              "application/json": {

              }
            }
          },
          "403": {
            "description": "권한 없음 - 관리자만 접근 가능",
            "content": {
              "application/json": {

              }
            }
          },
          "200": {
            "description": "메뉴 권한 업데이트 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer Authentication": []
          }
        ]
      }
    },
    "/auth/logout": {
      "post": {
        "tags": [
          "인증 관리"
        ],
        "summary": "로그아웃",
        "description": "사용자 로그아웃 처리 (JWT는 stateless이므로 클라이언트에서 토큰 삭제 필요)",
        "operationId": "logout",
        "responses": {
          "200": {
            "description": "로그아웃 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessResponse"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": [
          "인증 관리"
        ],
        "summary": "사용자 로그인",
        "description": "사용자 ID/이메일과 비밀번호로 로그인하여 JWT 토큰을 발급받습니다.",
        "operationId": "login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "로그인 실패 - 잘못된 인증 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "example": {
                  "message": "로그인에 실패했습니다. 사용자 ID/이메일 또는 비밀번호를 확인해주세요."
                }
              }
            }
          },
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/admin/users": {
      "get": {
        "tags": [
          "사용자 관리"
        ],
        "summary": "모든 사용자 목록 조회",
        "description": "시스템에 등록된 모든 사용자의 목록을 조회합니다. (관리자 권한 필요)",
        "operationId": "getAllUsers",
        "responses": {
          "500": {
            "description": "서버 오류",
            "content": {
              "application/json": {

              }
            }
          },
          "403": {
            "description": "권한 없음 - 관리자만 접근 가능",
            "content": {
              "application/json": {

              }
            }
          },
          "200": {
            "description": "사용자 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/UserResponse"
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer Authentication": []
          }
        ]
      },
      "post": {
        "tags": [
          "사용자 관리"
        ],
        "summary": "새 사용자 생성",
        "description": "새로운 사용자를 생성합니다. 사용자 ID와 이메일은 중복될 수 없습니다. (관리자 권한 필요)",
        "operationId": "createUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "400": {
            "description": "잘못된 요청 - 중복된 사용자 ID/이메일 또는 유효성 검사 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                },
                "examples": {
                  "중복 사용자 ID": {
                    "description": "중복 사용자 ID",
                    "value": {
                      "message": "이미 존재하는 사용자 ID입니다."
                    }
                  },
                  "중복 이메일": {
                    "description": "중복 이메일",
                    "value": {
                      "message": "이미 존재하는 이메일입니다."
                    }
                  }
                }
              }
            }
          },
          "200": {
            "description": "사용자 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "403": {
            "description": "권한 없음 - 관리자만 접근 가능",
            "content": {
              "application/json": {

              }
            }
          }
        },
        "security": [
          {
            "Bearer Authentication": []
          }
        ]
      }
    },
    "/test/encode-password": {
      "get": {
        "tags": [
          "test-controller"
        ],
        "operationId": "encodePassword",
        "parameters": [
          {
            "name": "password",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/auth/me": {
      "get": {
        "tags": [
          "인증 관리"
        ],
        "summary": "현재 사용자 정보 조회",
        "description": "JWT 토큰을 통해 현재 로그인한 사용자의 정보를 조회합니다.",
        "operationId": "getCurrentUser",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "description": "JWT 토큰이 포함된 Authorization 헤더",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          }
        ],
        "responses": {
          "401": {
            "description": "인증되지 않은 요청",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "200": {
            "description": "사용자 정보 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserDto"
                }
              }
            }
          },
          "400": {
            "description": "사용자 정보를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer Authentication": []
          }
        ]
      }
    },
    "/admin/users/{userId}": {
      "get": {
        "tags": [
          "사용자 관리"
        ],
        "summary": "특정 사용자 정보 조회",
        "description": "사용자 ID로 특정 사용자의 상세 정보를 조회합니다. (관리자 권한 필요)",
        "operationId": "getUser",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "조회할 사용자의 ID",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            },
            "example": 1
          }
        ],
        "responses": {
          "404": {
            "description": "사용자를 찾을 수 없음",
            "content": {
              "application/json": {

              }
            }
          },
          "403": {
            "description": "권한 없음 - 관리자만 접근 가능",
            "content": {
              "application/json": {

              }
            }
          },
          "200": {
            "description": "사용자 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer Authentication": []
          }
        ]
      },
      "delete": {
        "tags": [
          "사용자 관리"
        ],
        "operationId": "deleteUser",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        },
        "security": [
          {
            "Bearer Authentication": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "MenuPermissionsDto": {
        "type": "object",
        "properties": {
          "menuDashboard": {
            "type": "boolean",
            "description": "대시보드 메뉴 접근 권한",
            "example": true
          },
          "menuMonitoring": {
            "type": "boolean",
            "description": "모니터링 메뉴 접근 권한",
            "example": true
          },
          "menuBoards": {
            "type": "boolean",
            "description": "배전반 메뉴 접근 권한",
            "example": true
          },
          "menuSensors": {
            "type": "boolean",
            "description": "센서 메뉴 접근 권한",
            "example": true
          },
          "menuStatistics": {
            "type": "boolean",
            "description": "통계 메뉴 접근 권한",
            "example": true
          },
          "menuAlerts": {
            "type": "boolean",
            "description": "알림 메뉴 접근 권한",
            "example": true
          },
          "menuUsers": {
            "type": "boolean",
            "description": "사용자 관리 메뉴 접근 권한",
            "example": false
          },
          "menuFacilities": {
            "type": "boolean",
            "description": "시설 관리 메뉴 접근 권한",
            "example": true
          },
          "menuSettings": {
            "type": "boolean",
            "description": "시스템 설정 메뉴 접근 권한",
            "example": true
          }
        },
        "description": "메뉴 접근 권한 정보"
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "userId": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "integer",
            "format": "int32"
          },
          "roleDescription": {
            "type": "string"
          },
          "buildingId": {
            "type": "integer",
            "format": "int32"
          },
          "boardId": {
            "type": "integer",
            "format": "int32"
          },
          "isActive": {
            "type": "boolean"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "menuPermissions": {
            "$ref": "#/components/schemas/MenuPermissionsDto"
          }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "LoginRequest": {
        "required": [
          "password",
          "userIdOrEmail"
        ],
        "type": "object",
        "properties": {
          "userIdOrEmail": {
            "type": "string",
            "description": "사용자 ID 또는 이메일",
            "example": "admin"
          },
          "password": {
            "type": "string",
            "description": "비밀번호",
            "example": "admin123!"
          }
        },
        "description": "로그인 요청 정보"
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "description": "JWT 액세스 토큰",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "tokenType": {
            "type": "string",
            "description": "토큰 타입",
            "example": "Bearer"
          },
          "expiresIn": {
            "type": "integer",
            "description": "토큰 만료 시간 (초)",
            "format": "int64",
            "example": 86400
          },
          "user": {
            "$ref": "#/components/schemas/UserDto"
          }
        },
        "description": "로그인 응답 정보"
      },
      "UserDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "사용자 고유 ID",
            "format": "int32",
            "example": 1
          },
          "userId": {
            "type": "string",
            "description": "사용자 로그인 ID",
            "example": "admin"
          },
          "username": {
            "type": "string",
            "description": "사용자명",
            "example": "관리자"
          },
          "email": {
            "type": "string",
            "description": "이메일",
            "example": "admin@hdms.com"
          },
          "role": {
            "type": "integer",
            "description": "역할 (1: 관리자, 2: 사용자)",
            "format": "int32",
            "example": 1
          },
          "roleDescription": {
            "type": "string",
            "description": "역할 설명",
            "example": "전체관리자"
          },
          "buildingId": {
            "type": "integer",
            "description": "건물 ID",
            "format": "int32",
            "example": 1
          },
          "boardId": {
            "type": "integer",
            "description": "배전반 ID",
            "format": "int32",
            "example": 1
          },
          "isActive": {
            "type": "boolean",
            "description": "활성화 상태",
            "example": true
          },
          "menuPermissions": {
            "$ref": "#/components/schemas/MenuPermissionsDto"
          }
        },
        "description": "사용자 기본 정보"
      },
      "CreateUserRequest": {
        "required": [
          "email",
          "password",
          "role",
          "userId",
          "username"
        ],
        "type": "object",
        "properties": {
          "userId": {
            "maxLength": 50,
            "minLength": 3,
            "type": "string",
            "description": "사용자 로그인 ID",
            "example": "testuser"
          },
          "username": {
            "maxLength": 50,
            "minLength": 2,
            "type": "string",
            "description": "사용자명",
            "example": "테스트 사용자"
          },
          "email": {
            "type": "string",
            "description": "이메일 주소",
            "example": "test@hdms.com"
          },
          "password": {
            "maxLength": 2147483647,
            "minLength": 6,
            "type": "string",
            "description": "비밀번호",
            "example": "password123"
          },
          "role": {
            "type": "integer",
            "description": "사용자 역할 (1: 관리자, 2: 사용자)",
            "format": "int32",
            "example": 2
          },
          "buildingId": {
            "type": "integer",
            "description": "건물 ID",
            "format": "int32",
            "example": 1
          },
          "boardId": {
            "type": "integer",
            "description": "배전반 ID",
            "format": "int32",
            "example": 1
          },
          "isActive": {
            "type": "boolean",
            "description": "활성화 상태",
            "example": true
          },
          "menuDashboard": {
            "type": "boolean",
            "description": "대시보드 메뉴 접근 권한",
            "example": true
          },
          "menuMonitoring": {
            "type": "boolean",
            "description": "모니터링 메뉴 접근 권한",
            "example": true
          },
          "menuBoards": {
            "type": "boolean",
            "description": "배전반 메뉴 접근 권한",
            "example": true
          },
          "menuSensors": {
            "type": "boolean",
            "description": "센서 메뉴 접근 권한",
            "example": true
          },
          "menuStatistics": {
            "type": "boolean",
            "description": "통계 메뉴 접근 권한",
            "example": true
          },
          "menuAlerts": {
            "type": "boolean",
            "description": "알림 메뉴 접근 권한",
            "example": true
          },
          "menuUsers": {
            "type": "boolean",
            "description": "사용자 관리 메뉴 접근 권한",
            "example": false
          },
          "menuFacilities": {
            "type": "boolean",
            "description": "시설 관리 메뉴 접근 권한",
            "example": true
          },
          "menuSettings": {
            "type": "boolean",
            "description": "시스템 설정 메뉴 접근 권한",
            "example": true
          }
        },
        "description": "사용자 생성 요청 정보"
      }
    },
    "securitySchemes": {
      "Bearer Authentication": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
